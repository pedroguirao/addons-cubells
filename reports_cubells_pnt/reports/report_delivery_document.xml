<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="report_delivery_document_inh_report" model="ir.ui.view">
        <field name="name">report.delivery.document.inh.report</field>
        <field name="inherit_id" ref="stock.report_delivery_document"/>
        <field name="arch" type="xml">

            <data>
                <!-- Cabecera -->
                <xpath expr="//thead[1]/tr/th[2]" position="replace"/>
                <xpath expr="//thead[1]/tr/th[1]" position="before">
                    <th name="th_sm_ordered"><strong>Ordered</strong></th>
                </xpath>

                <!-- Cuerpo -->
                <xpath expr="//table[@class='table table-sm'][1]/tbody/tr/td[2]" position="replace"/>
                <xpath expr="//table[@class='table table-sm'][1]/tbody/tr/td[1]" position="before">
                    <td>
                        <span t-field="move.product_uom_qty"/>
                        <span t-field="move.product_uom"/>
                    </td>
                </xpath>

            </data>

        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
