<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="report_saleorder_document_inh_report" model="ir.ui.view">
        <field name="name">report.saleorder.document.inh.report</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">

            <data>
                <!-- Cuerpo -->
                <xpath expr="//td[@name='account_invoice_line_name']/span" position="replace">
                    <span t-field="line.name_printed" t-options="{'widget': 'text'}"/>
                </xpath>
            </data>

        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
