<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="report_saleorder_document_inh_report" model="ir.ui.view">
        <field name="name">report.saleorder.document.inh.report</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">


           <data>

                <!-- Renombrar Fecha orden a Fecha -->
                <xpath expr="/t/t/div/div[2]/div[2]/strong[2]" position="replace">
                    <strong t-else="">Date:</strong>
                </xpath>

                <!-- Renombrar Presupuesto a AlbarÃ¡n -->
                <!--<xpath expr="//h2/span[2]" position="replace">
                    <span t-elif="doc.state in ['draft','sent']">Delivery note # </span>
                </xpath>-->

                <!-- Tabla Cabecera -->
                <xpath expr="//thead/tr/th[@name='th_taxes']" position="replace"/>
                <xpath expr="//thead/tr/th[@name='th_quantity']" position="replace"/>
                <xpath expr="//thead/tr/th[@name='th_description']" position="before">
                    <th name="th_ref" class="text-end">Ref</th>
                    <th name="th_quantity" class="text-end">Quantity</th>
                </xpath>
                <xpath expr="//thead/tr/th[@name='th_priceunit']" position="before">
                    <th name="th_proveedor" class="text-end">Proveedor</th>
                    <th name="th_price_custom" class="text-end">Precio</th>
                    <th name="th_dto" class="text-end">Dto</th>
                </xpath>
                <!-- Tabla Cuerpo -->
                <xpath expr="//tbody/t/tr/t/td[@name='td_priceunit']" position="before">
                     <td name="td_proveedor" class="text-end">
                        <span t-field="line.seller_ids"/>
                    </td>
                    <td name="td_precio" class="text-end">
                        <span t-field="line.price_unit"/>
                    </td>
                    <td name="td_dto" class="text-end">
                        <span t-field="line.discount"/>
                    </td>
                </xpath>
                <xpath expr="//td[@name='td_taxes']" position="replace"/>

                <xpath expr="//tbody/t/tr/t/td[1]/span" position="replace">
                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                </xpath>
                <xpath expr="//td[@name='td_quantity']" position="replace"/>
                <xpath expr="//tbody/t/tr/t/td[1]" position="before">
                     <td name="td_ref" class="text-end">
                        <span t-field="line.product_id.default_code"/>
                    </td>
                    <td name="td_quantity" class="text-end">
                        <span t-field="line.product_uom_qty"/>
                    </td>
                </xpath>

            </data>


        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
