<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="report_saleorder_document_inh_report" model="ir.ui.view">
        <field name="name">report.saleorder.document.inh.report</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">

            <data>
                <!-- Cabecera -->
                <xpath expr="//thead/tr/th[@name='th_taxes']" position="replace"/>
                <xpath expr="//th[@name='th_priceunit']" position="before">
                    <th name="th_supplier" class="text-end">Supplier</th>
                </xpath>
                <xpath expr="//thead/tr/th[4]" position="after">
                    <th name="th_netprice" class="text-end">Net price</th>
                </xpath>

                <!-- Cuerpo -->
                <xpath expr="//td[@name='td_taxes']" position="replace"/>
                <xpath expr="//tbody/t/tr/t/td[1]/span" position="replace">
                    <span t-field="line.name_printed" t-options="{'widget': 'text'}"/>
                </xpath>
                <xpath expr="//td[@name='td_priceunit']" position="before">
                    <td name="td_sellerids" class="text-end">
                        <span t-field="line.seller_ids"/>
                    </td>
                </xpath>
                <xpath expr="//tbody/t/tr/t/td[4]" position="after">
                    <td name="td_product_net_price" class="text-end">
                        <span t-field="line.product_net_cost_price"/>
                    </td>
                </xpath>
            </data>

        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
